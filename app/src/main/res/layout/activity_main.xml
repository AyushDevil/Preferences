<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ayush.preferences.MainActivity">

    <Button
        android:id="@+id/put"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPutClick"
        android:text="PUT"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_above="@+id/get"
        android:layout_toLeftOf="@+id/output"
        android:layout_toStartOf="@+id/output" />

    <Button
        android:id="@+id/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGetClick"
        android:text="GET"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/put"
        android:layout_toEndOf="@+id/put"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="344dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp" />
</RelativeLayout>
